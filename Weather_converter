const kelvin = 0; // today forecast in Kelvin
const celsius = kelvin - 273; //today forecast in Celsius;
let fahrenheit = celsius * (9 / 5) + 32; // today forecast in Fahrenheit
fahrenheit = Math.floor(fahrenheit); // round down the fahrenheit
console.log(`The temperature is ${fahrenheit} degrees Fahrenheit.`);
let newton = celsius * (33/100);// today forecast in Newton
newton = Math.floor(newton); // round down the Newton
console.log(`The temperature is ${newton} degrees Newton.`); 
